<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="313dp"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:layout_margin="25dp"
                android:gravity="center"
                android:text="Hicker watch"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/lattTextview"
                android:layout_width="347dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_margin="25dp"
                android:background="@color/black"
                android:backgroundTint="@color/black"
                android:gravity="center"
                android:text="Lattitude : 40.473563"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/altTextview"
                android:layout_width="347dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_margin="25dp"
                android:background="@color/black"
                android:backgroundTint="@color/black"
                android:gravity="center"
                android:text="Alttitude:40"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/accTextview"
                android:layout_width="347dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_margin="25dp"
                android:background="@color/black"
                android:backgroundTint="@color/black"
                android:gravity="center"
                android:text="Accuracy : 40"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/longTextview"
                android:layout_width="347dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_margin="25dp"
                android:background="@color/black"
                android:backgroundTint="@color/black"
                android:gravity="center"
                android:text="Longitude:40.2354323"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/addressTextview"
                android:layout_width="345dp"
                android:layout_height="197dp"
                android:layout_gravity="center"
                android:layout_margin="25dp"
                android:background="@color/black"
                android:backgroundTint="@color/black"
                android:gravity="center"
                android:text="Address:\n 40 street lilina \n somewhere ,surat"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>